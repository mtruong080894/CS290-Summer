<link rel="stylesheet" type="text/css" href="css.stylesheet.css">
<form id="newWorkout" action="/insert">
	<fieldset> <!-- set field with req -->
		<legend>Enter Workout</legend>
		<label for ="scriptName"> Name: </label>
			<input type = "text" name="scriptName" id="scriptName"><br>
		<label for="reps"> Reps: </label>
			<input type="number" name="reps" id="reps><br>
		<label for="weight"> Weight: </label>
			<input type="number" name="weight" id="weight><br>
		<label for="date"> Date: </label>
			<input type="date" name="date" id="date"><br>
		<label for="lbs"> lbs: </label>	
			<input type="radio" name="lbs" id="lbs value="1">
		<label for="kgs"> kgs</label>
			<input type="radio" name="lbs" value="0"><br> 
		<input type="submit" id="submit" value="Submit Workout">
	</fieldset>
</form>

<h1> Workout Info</h1>
<table id="workoutTable">
	<tr>
		<th style="display:none"> ID </th>
		<th> Exercise</th>
		<th> Reps</th>
		<th> Weight</th>
		<th> Lbs & Kgs </th>
		<th> Date </th>
		<th> Edit </th>
		<th> Delete </th>
	</tr>
	{{#each workouts}}
	<tr>
		<td style="display:none">{{this.id}}</td>
		<td>{{this.name}}</td>
		<td>{{this.reps}}</td>
		<td>{{this.weight}}</td>
		<td>{{this.lbs}}</td>
		<td>{{this.date}]</td>
		<td><a href="/updateWorkout?id={{this.id}}"><input type="button" value="Edit")"></a></td>
		<td><input type="button" value="Delete" onclock="deleteWorkout('workoutTable',this,{{this.id}})"></td>
	</tr>
	{{/each}}
</table>
<script src = "/js/script.js"></script>


